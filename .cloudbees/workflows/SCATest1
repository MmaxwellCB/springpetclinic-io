name: SCA Vulnerability Scan

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  sca_scan:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Introduce vulnerable dependency
        run: |
          npm install lodash@4.17.19  # Version with known prototype pollution vulnerability

      - name: Run SCA scan
        run: |
          npx audit-ci --moderate

      - name: Flag critical vulnerabilities
        if: failure()
        run: |
          echo "‚ùå Critical vulnerabilities detected! Please review the SCA scan results."
          exit 1

      - name: Upload SCA report
        uses: actions/upload-artifact@v3
        with:
          name: sca-scan-report
          path: ./audit-ci-report.json

